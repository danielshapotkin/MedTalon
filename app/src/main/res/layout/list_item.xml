<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <TextView
        android:id="@+id/polyclinic_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Поликлиника"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/polyclinic_worktime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Часы работы" />

    <TextView
        android:id="@+id/polyclinic_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email" />

    <TextView
        android:id="@+id/polyclinic_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Адрес" />

    <TextView
        android:id="@+id/polyclinic_url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Url" />


</LinearLayout>
